<Window x:Class="DynamicTranslator.ViewModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DynamicTranslator || Oğuzhan Soykan" Height="194.173" Width="407.333"
        ResizeMode="CanMinimize"
        Icon="/Resources/dynamic-link-library 16.png">
    <StackPanel
        RenderTransformOrigin="0.5,0.5">
        <StackPanel.RenderTransform>
            <TransformGroup>
                <ScaleTransform />
                <SkewTransform AngleX="-0.311" AngleY="0.29" />
                <RotateTransform Angle="-0.041" />
                <TranslateTransform X="-0.989" Y="-1.169" />
            </TransformGroup>
        </StackPanel.RenderTransform>
        <StackPanel.Background>
            <ImageBrush ImageSource="/Resources/background.png" />
        </StackPanel.Background>
        <StackPanel.OpacityMask>
            <ImageBrush TileMode="Tile" ImageSource="/Resources/background.png" />
        </StackPanel.OpacityMask>
        <StackPanel Margin="136,0,105,0" Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <Canvas>
                    <DockPanel Height="120" Canvas.Left="-25" Canvas.Top="21" Width="184">
                        <Button x:Name="BtnSwitch" Height="120" Content="Start Translator" Padding="2"
                                Click="btnSwitch_Click" RenderTransformOrigin="1.753,4.04" Width="184"
                                BorderBrush="#FF040404" Foreground="White" HorizontalAlignment="Left"
                                VerticalAlignment="Top" FontFamily="Showcard Gothic" FontSize="16" FontWeight="Bold"
                                Opacity="0.9">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox"
                                                     StartPoint="0.5,0">
                                    <GradientStop Color="Black" Offset="1" />
                                    <GradientStop Color="#FF8D4242" />
                                    <GradientStop Color="#FF8A4040" Offset="0.142" />
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform AngleY="-0.181" />
                                    <RotateTransform Angle="-0.066" />
                                    <TranslateTransform Y="-0.434" />
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                    </DockPanel>
                </Canvas>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>